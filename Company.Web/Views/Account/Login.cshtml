@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>Login</h1>

<form asp-action="Login" method="post">
    <div class="text-danger" asp-validation-summary="All"></div>

    <input type="email" asp-for="Email" placeholder="Email" required="" class="form-control">
    <span asp-validation-for="Email"></span>
    <br />

    <input type="password" asp-for="Password" placeholder="Password" required="" class="form-control">
    <span asp-validation-for="Password"></span>
    <br />

    <div class="wthree-text">
        <label class="anim">
            <input asp-for="RememberMe" class="checkbox" required="">
            <span>Keep Me Signed In</span>
        </label>
        <div class="clear"></div>
    </div>

    <input type="submit" value="Login" class="btn btn-secondary">

</form>
<p class="text-white">Don't have an Account? <a asp-action="SignUp">SignUp Now!</a></p>
<p class="text-white"><a asp-action="ForgetPassword">Forget Password!</a></p>