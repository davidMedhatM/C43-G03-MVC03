@model SignUpViewModel

@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>SignUp</h1>

<form asp-action="SignUp" method="post">
    <div asp-validation-summary="All"></div>

    <input type="text" asp-for="FirstName" placeholder="FirstName" required="" class="form-control">
    <span asp-validation-for="FirstName"></span>
    <br />

    <input type="text" asp-for="LastName" placeholder="LastName" required="" class="form-control">
    <span asp-validation-for="LastName"></span>
    <br />

    <input type="email" asp-for="Email" placeholder="Email" required="" class="form-control">
    <span asp-validation-for="Email"></span>
    <br />

    <input type="password" asp-for="Password" placeholder="Password" required="" class="form-control">
    <span asp-validation-for="Password"></span>
    <br />

    <input type="password" asp-for="ConfirmPassword" placeholder="Confirm Password" required="" class="form-control">
    <span asp-validation-for="ConfirmPassword"></span>
    <br />

    <div class="wthree-text">
        <label class="anim">
            <input asp-for="IsAgree" type="checkbox" required="">
            <span>I Agree To The Terms & Conditions</span>
        </label>
        <div class="clear"></div>
    </div>
    <input type="submit" class="btn btn-primary" value="SignUp" />
</form>
<p class="text-white">do you have an account? <a asp-action="login">Login Now</a></p>